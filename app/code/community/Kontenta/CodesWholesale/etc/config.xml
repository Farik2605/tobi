<config>
    <modules>
        <Kontenta_CodesWholesale>
            <version>0.2.0</version>
        </Kontenta_CodesWholesale>
    </modules>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <kontenta_codeswholesale_addcolumn_to_product>
                        <type>singleton</type>
                        <class>Kontenta_CodesWholesale_Model_Observer</class>
                        <method>addFlagColumnToProductGrid</method>
                    </kontenta_codeswholesale_addcolumn_to_product>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <catalog_product_collection_load_before>
                <observers>
                    <kontenta_codeswholesale_before_collection>
                        <type>singleton</type>
                        <class>Kontenta_CodesWholesale_Model_Observer</class>
                        <method>onEavLoadBeforeProductFlag</method>
                    </kontenta_codeswholesale_before_collection>
                </observers>
            </catalog_product_collection_load_before>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <kontentacodeswholesale before="Mage_Adminhtml">Kontenta_CodesWholesale_Adminhtml</kontentacodeswholesale>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <helpers>
            <kontentaCw>
                <class>Kontenta_CodesWholesale_Helper</class>
            </kontentaCw>
        </helpers>
        <models>
            <kontentacw>
                <class>Kontenta_CodesWholesale_Model</class>
            </kontentacw>
        </models>
        <events>
            <sales_order_place_after>
                <observers>
                    <kontenta_cw_place_order_observer>
                        <type>singleton</type>
                        <class>Kontenta_CodesWholesale_Model_Observer</class>
                        <method>placeOrderAfter</method>
                    </kontenta_cw_place_order_observer>
                </observers>
            </sales_order_place_after>
        </events>
        <resources>
            <kontenta_cw_attribute_setup>
                <setup>
                    <module>Kontenta_CodesWholesale</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </kontenta_cw_attribute_setup>
        </resources>
        <template>
            <email>
                <order_after_cw translate="label" module="kontentacw">
                    <label>Send code</label>
                    <file>send_cw_code.html</file>
                    <type>html</type>
                </order_after_cw>
            </email>
        </template>
        <default>
            <kontentacw>
                <order>
                    <cw_code>order_after_cw</cw_code>
                </order>
            </kontentacw>
        </default>
    </global>
</config>